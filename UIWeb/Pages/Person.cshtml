@page "{Id:guid}"
@model UIWeb.Pages.PersonModel
@{
    <a href="/">Back to List</a>
    <form class="form">
        <label for="Id">Id: </label>
        <input type="text" name="Id" disabled value="@Model.Person.Id" size="40" />
        <br/>
        <label for="Name">Name: </label>
        <input type="text" name="Name" disabled value="@Model.Person.Name" size="40"/>
        <br/>
        <label for="Address">Address: </label>
        <input type="text" name="Address" disabled value="@Model.Person.Address.FirstLine, @Model.Person.Address.SecondLine, @Model.Person.Address.PostCode.Value" size="100"/>
    </form>
}
